{
  "name": "home-library",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:reset": "npx prisma migrate reset --force",
    "prisma-seed": "npx prisma db seed",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:migrate:prod": "npx prisma migrate reset --force && npm run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "formatAll": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix & prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest --testMatch \"<rootDir>/*.spec.ts\" --config ./test/jest-e2e.json --noStackTrace --runInBand",
    "test:auth": "cross-env TEST_MODE=auth jest --config ./test/jest-e2e.json --noStackTrace --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/cli": "^10",
    "@nestjs/common": "^10",
    "@nestjs/core": "^10",
    "@nestjs/jwt": "^10",
    "@nestjs/mapped-types": "^2",
    "@nestjs/platform-express": "^10",
    "@nestjs/swagger": "^7.1.4",
    "@prisma/client": "^5.1.0",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14",
    "dotenv": "^16.0.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.1",
    "ms": "^2.1.3",
    "nestjs-prisma": "^0.22.0",
    "prisma": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-node": "^10.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/schematics": "^10",
    "@nestjs/testing": "^10",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
